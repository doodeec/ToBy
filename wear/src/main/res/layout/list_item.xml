<?xml version="1.0" encoding="utf-8"?>
<com.doodeec.toby.ui.SLItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        android:paddingLeft="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding">

        <TextView
            android:id="@+id/name"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:lineSpacingExtra="-4sp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:text="Johanis a Fred"/>

        <TextView
            android:id="@+id/amount"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-light"
            android:lineSpacingExtra="-4sp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:text="5"/>

        <TextView
            android:id="@+id/unit"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-light"
            android:lineSpacingExtra="-4sp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:text="ks"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteTransparent"/>

    <RelativeLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/delete_container"
            android:layout_width="@dimen/action_button_size"
            android:layout_height="@dimen/action_button_size"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_red">

            <ImageView
                android:id="@+id/delete"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="@dimen/action_button_padding"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_clear_white_36dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/action_button_size"
            android:layout_height="@dimen/action_button_size"
            android:layout_marginLeft="@dimen/padding"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/delete_container"
            android:background="@drawable/circle_green">

            <ImageView
                android:id="@+id/check"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="@dimen/action_button_padding"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_done_white_36dp"/>
        </RelativeLayout>

    </RelativeLayout>
</com.doodeec.toby.ui.SLItemLayout>